<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.MainPage">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Label Text="Cliente de autenticación y eco" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="AuthEntry" Placeholder="Ingrese credenciales" />
            <Button Text="Conectar" Clicked="ConnectButton_Clicked" />

            <Entry x:Name="EchoEntry" Placeholder="Escriba mensaje" IsEnabled="False" />
            <Button x:Name="SendButton" Text="Enviar" Clicked="SendButton_Clicked" IsEnabled="False" />

            <Button Text="Desconectar" Clicked="DisconnectButton_Clicked" />

            <Label x:Name="ResponseLabel" Text="Respuesta del servidor" FontSize="18" />
        </StackLayout>
    </ScrollView>

</ContentPage>
